# =============================================================================
# Renpay Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control.
# =============================================================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://user:password@host:5432/database

# --- Cloudflare R2 (Object Storage) ---
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# --- Stripe (Payments) ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxx
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# --- Mail (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-google-workspace-email@yourdomain.com
SMTP_PASS=your-google-app-password
SMTP_FROM_EMAIL=your-google-workspace-email@yourdomain.com
SMTP_FROM_NAME=Renpay

# --- PayPal (Checkout + Subscription payment method on file) ---
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
PAYPAL_ENV=sandbox
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_PLAN_ID_MONTHLY=P-xxxxxxxxxxxxxxxxxxxx
PAYPAL_PLAN_ID_ANNUAL=P-yyyyyyyyyyyyyyyyyyyy
# Optional explicit personal aliases (fallback to PAYPAL_PLAN_ID_MONTHLY/ANNUAL)
PAYPAL_PLAN_ID_PERSONAL_MONTHLY=
PAYPAL_PLAN_ID_PERSONAL_ANNUAL=
# Optional business plan IDs (required for Business PayPal checkout)
PAYPAL_PLAN_ID_BUSINESS_MONTHLY=
PAYPAL_PLAN_ID_BUSINESS_ANNUAL=

# --- Auth ---
NEXTAUTH_URL=https://renpay.vercel.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
AUTH_AUTO_SIGNUP=false
# Optional: comma-separated allowlist. If set, only listed emails can sign in.
AUTH_ALLOWED_EMAILS=
AUTH_MAGIC_LINK_SECRET=replace-with-long-random-secret
AUTH_MAGIC_LINK_EXPIRES_MINUTES=10

# --- App ---
NEXT_PUBLIC_APP_URL=https://renpay.vercel.app
